<div class="wrapper">
  <div class="form-container">
    <div class="container">
      <h3>The Awesome Review Page!</h3>
      <div class="review_form">
        <%= simple_form_for [@transaction, @review] do |f| %>
          <%= f.input :text, label:false, placeholder: 'Any feedback about the transaction?' %>
          <%= f.input :rating, collection: 1..5, label:false, prompt: 'Rate the transaction 1-5', as: :radio_buttons, class: "radio"  %>
           <%= f.input :item_text, label:false, placeholder: 'Any feedback about the item?' %>
          <%= f.input :item_rating, collection: 1..5, label:false, prompt: 'Rate the item 1-5', as: :radio_buttons, class: "radio" %>
          <%= f.submit " Submit ", :class => "btn btn-danger"%>
          <%= link_to 'Cancel', root_path, class: 'btn btn-danger'%>
        <% end %>
      </div>
    </div>
  </div>
</div>



