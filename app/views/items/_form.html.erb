<%= simple_form_for @item do |f| %>
  <% if @item.errors.any? %>
    <div id="error-explanation">
      <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price%>
  <%= f.input :category %>
  <%= f.submit %>
<% end %>
