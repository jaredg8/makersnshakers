<div class="main-container">
  <div class="back-button" style="width: 60px">
    <%= link_to "Back", items_path, class: "btn btn-primary btn-lg", style: "margin: 10px" %>
  </div>
<div class="container text-center">
<h1><%= @item.name %></h1>
<h4>Category: <%= @item.category %></h4>
<h4>$<%= @item.price %>/per day</h4>
<h4><%= @item.description %></h4>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  <!-- Indicators -->
  <ol class="carousel-indicators">

    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->


  <div class="carousel-inner">

      <div class="item active"><%= cl_image_tag @item.photos.first.path %> </div>

    <% collection = @item.photos[1..-1]  %>
    <% collection.each do |photo| %>
      <div class="item">
        <%= cl_image_tag photo.path %>
      </div>
    <% end %>


  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<div class="rent-request-container">
  <div class="rent-button">
    <a href="" class="btn btn-lg btn-primary">REQUEST TO RENT</a>
  </div>
</div>

</div>
</div>
