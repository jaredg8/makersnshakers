<div class="main-container">

  <div class="container text-center">
    <div class="row">
      <div class="col-lg-7">
        <div class="show-product">


          <h1><%= @item.name %></h1>

          <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
            <!-- Indicators -->
            <ol class="carousel-indicators">

              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->


            <div class="carousel-inner">

              <div class="item active"><%= cl_image_tag @item.photos.first.path %></div>

              <% collection = @item.photos[1..-1]  %>
              <% collection.each do |photo| %>
              <div class="item">
                <%= cl_image_tag photo.path %>
              </div>
              <% end %>


              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div class="show-decription">
            <h4>Description</h4>
            <p><%= @item.description %></p>
          </div>
        </div>
      </div>


      <div class="col-lg-1">
      </div>

      <div class="col-lg-4">

        <div>
          <%= render 'transactions/booking' %>
        </div>

      </div>

    </div>
  </div>
  <div class="back-button" style="width: 60px">
    <%= link_to "Back", items_path, class: "btn btn-primary btn-lg", style: "margin: 10px" %>
  </div>
</div>
